{
  "name": "node-starter",
  "version": "1.0.0",
  "main": "build/main.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/servexyz/node-starter"
  },
  "devDependencies": {
    "@ava/babel-preset-stage-4": "^1.1.0",
    "@babel/cli": "^7.0.0-beta.56",
    "@babel/core": "^7.0.0-beta.49",
    "@babel/node": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "@babel/register": "^7.0.0-beta.49",
    "ava": "^1.0.0-beta.5.1",
    "babel-loader": "^8.0.0-beta.3",
    "babel-plugin-dotenv": "^0.1.1",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "nodemon": "^1.18.3",
    "nodemon-webpack-plugin": "^4.0.3",
    "npm-run-all": "^4.1.3",
    "npm-starter-sample-module": "0.0.2",
    "source-map-loader": "^0.2.3",
    "webpack": "^4.11.1",
    "webpack-cli": "^3.0.2",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "idempotent-babel-polyfill": "^0.1.1"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run dev:liveReloadedModule",
    "dev:vanillaModule": "babel-node src/index.js",
    "dev:builtModule": "npm run build && babel-node build/main.js",
    "dev:liveReloadedModule": "nodemon --watch src/index.js --exec 'babel-node src/index.js'",
    "dev:liveReloadedDocker": "npm-run-all -p docker:compose dev:liveReloadedModule docker:liveReload ",
    "docker:liveReload": "npx docker-live-reload 'src/**/*' node-starter_server_1 /usr/src/server/src",
    "docker:compose": "docker-compose up -d",
    "dev:server": "webpack --mode development --watch --display minimal",
    "test": "npm-run-all -s clean build test:liveReloadedAva",
    "test:ava": "ava",
    "test:liveReloadedAva": "ava --watch",
    "clean": "rm -Rf ./build",
    "build": "webpack --mode production --display minimal",
    "publish": "npm run build && npm run publish:np",
    "production:server": "npm run build && node build/main.js",
    "publish:np": "npx np"
  },
  "ava": {
    "require": [
      "@babel/register",
      "idempotent-babel-polyfill"
    ],
    "verbose": true
  }
}
