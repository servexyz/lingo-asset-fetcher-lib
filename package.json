{
  "name": "npm-starter",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/servexyz/npm-starter"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.49",
    "@babel/core": "^7.0.0-beta.49",
    "@babel/node": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "ava": "^1.0.0-beta.5.1",
    "babel-plugin-dotenv": "^0.1.1"
  },
  "scripts": {
    "dev": "babel-node index.js",
    "start": "npm run clean && npm run build && node ./build",
    "clean": "rm -Rf ./build",
    "build": "babel -d ./build ./index.js -s",
    "test": "ava"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "9.3.0"
          }
        }
      ]
    ],
    "plugins": [
      [
        "babel-plugin-dotenv",
        {
          "replacedModuleName": "babel-dotenv"
        }
      ]
    ]
  }
}
