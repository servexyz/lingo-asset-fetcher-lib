{
  "name": "laf-lib",
  "version": "0.3.11",
  "description": "batch downloads assets from lingo to your local project. Used by laf (the CLI version)",
  "main": "build/main.js",
  "license": "MIT",
  "keywords": [
    "laf",
    "lib",
    "lingo",
    "lingoapp",
    "sketchapp",
    "assets",
    "fetch"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/servexyz/lingo-asset-fetcher-lib"
  },
  "devDependencies": {
    "@ava/babel-preset-stage-4": "^2.0.0",
    "@babel/core": "7.4.3",
    "@babel/node": "7.2.2",
    "@babel/polyfill": "^7.4.3",
    "@babel/preset-env": "7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "7.4.0",
    "@packtracker/webpack-plugin": "^2.0.1",
    "ava": "^1.4.1",
    "babel-loader": "^8.0.5",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "nodemon": "^1.18.11",
    "nodemon-webpack-plugin": "^4.0.8",
    "npm-run-all": "^4.1.5",
    "size-plugin": "^1.2.0",
    "source-map-loader": "^0.2.4",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "Lingojs": "git+https://github.com/TheNounProject/LingoJS.git",
    "clipboardy": "^2.0.0",
    "dotenv": "^7.0.0",
    "fs-extra": "^7.0.1",
    "ink": "^2.1.1",
    "ink-select-input": "^3.1.0",
    "ink-text-input": "^3.1.1",
    "luxon": "^1.12.1",
    "react": "^16.8.6"
  },
  "scripts": {
    "start": "npm run dev",
    "clean": "rm -Rf ./build",
    "dev": "npm run dev:liveReloadedModule",
    "dev:vanillaModule": "babel-node src/lingo.js",
    "dev:liveReloadedModule": "nodemon --watch src/**/*.js --exec 'babel-node src/lingo.js'",
    "test": "npm-run-all -s clean build test:liveReloadedAva",
    "test:ava": "ava",
    "test:liveReloadedAva": "ava --watch",
    "build": "webpack --mode production --display minimal",
    "production": "npm run build && node build/main.js",
    "ci": "npm run build && npm run ci:local:timed",
    "ci:local": "trevor",
    "ci:local:timed": "npm run ci:local | gnomon --type=elapsed-total",
    "ci:local:cache:install": "docker pull verdaccio/verdaccio",
    "ci:local:cache:run": "docker run -it --rm --name verdaccio -p 4873:4873 verdaccio/verdaccio",
    "ci:prepare": "npm install -g trevor gnomon"
  },
  "ava": {
    "files": [
      "tests/*.test.js"
    ],
    "require": [
      "@babel/register",
      "@babel/polyfill"
    ],
    "verbose": true
  }
}
