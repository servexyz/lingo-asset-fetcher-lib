{
	"name": "lingo-asset-fetcher-lib",
	"version": "0.2.6",
	"description": "batch downloads assets from lingo to your local project. Used by laf (the CLI version)",
	"main": "build/main.js",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/servexyz/lingo-asset-fetcher-lib"
	},
	"devDependencies": {
		"@ava/babel-preset-stage-4": "^1.1.0",
		"@babel/core": "7.1.2",
		"@babel/node": "7.0.0",
		"@babel/polyfill": "^7.4.3",
		"@babel/preset-env": "7.1.0",
		"@babel/register": "7.0.0",
		"@packtracker/webpack-plugin": "^1.1.1",
		"ava": "^1.4.1",
		"babel-loader": "^8.0.4",
		"duplicate-package-checker-webpack-plugin": "^3.0.0",
		"nodemon": "^1.18.3",
		"nodemon-webpack-plugin": "^4.0.8",
		"npm-run-all": "^4.1.3",
		"npm-starter-sample-module": "0.0.4",
		"size-plugin": "^1.1.4",
		"source-map-loader": "^0.2.3",
		"webpack": "^4.11.1",
		"webpack-cli": "^3.3.0",
		"webpack-node-externals": "^1.7.2"
	},
	"dependencies": {
		"Lingojs": "git+https://github.com/TheNounProject/LingoJS.git",
		"dotenv": "^6.1.0",
		"fs-extra": "^7.0.1"
	},
	"scripts": {
		"start": "npm run dev",
		"clean": "rm -Rf ./build",
		"dev": "npm run dev:liveReloadedModule",
		"dev:vanillaModule": "babel-node src/index.js",
		"dev:liveReloadedModule": "nodemon --watch src/index.js --exec 'babel-node src/index.js'",
		"test": "npm-run-all -s clean build test:liveReloadedAva",
		"test:ava": "ava",
		"test:liveReloadedAva": "ava --watch",
		"build": "webpack --mode production --display minimal",
		"production": "npm run build && node build/main.js"
	},
	"ava": {
		"files": [
			"!npm-starter-sample-module/**/*.js",
			"tests/"
		],
		"require": [
			"@babel/register",
			"@babel/polyfill"
		],
		"verbose": true
	}
}
